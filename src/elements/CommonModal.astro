---
export const modal = '#common-modal'

export interface Props {
  tag?: string
  id?: string
  class?: string
}

const {
  tag = 'e-popover',
  id = 'common-modal',
  class: className,
  ...rest
} = Astro.props

const Tag = tag as any
---

<Tag
  class:list={['common-modal', className]}
  {id}
  {...rest}
>
  <div
    class="common-modal__inner"
    data-outside
  >
    <div class="common-modal__content hidden-scrollbar">
      <slot />
    </div>
  </div>
</Tag>

<style is:global>
  .common-modal {
    --escape: true;
    --click-outside: true;

    --duration: 0.4s;

    position: fixed;
    top: 0;
    left: 0;

    z-index: var(--z-common-modal);

    width: 100%;
    height: 100%;

    display: none;
    opacity: 0;

    transition: opacity var(--duration);
  }

  .common-modal::before {
    content: '';

    position: absolute;
    width: 100%;
    height: 100%;

    z-index: -1;

    background-color: rgba(0, 0, 0, 0.85);
  }

  .common-modal__inner {
    width: 100%;
    height: 100%;

    display: flex;
    align-items: center;
    justify-content: center;
  }

  .common-modal__content {
    position: relative;

    max-height: 100%;

    clip-path: polygon(0 100%, 100% 100%, 100% 100%, 0% 100%);
    transition: clip-path var(--duration);

    overflow: hidden auto;

    @media (max-width: 768px) {
      width: 100%;
      display: flex;
      justify-content: center;
    }

    .common-modal.opened & {
      clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
    }

    .common-modal.closing & {
      transition-duration: calc(var(--duration) / 2);
      clip-path: polygon(0 0, 100% 0, 100% 0, 0 0);
    }
  }
</style>
