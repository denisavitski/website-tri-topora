---
export interface Props {
  class?: string
  text?: string
  tag?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'
}

const { class: className, text = 'heading', tag = 'h2', ...rest } = Astro.props

const Tag = tag
---

<Tag
  {...rest}
  class:list={['section-heading', className]}
  set:html={text}
/>

<style is:global>
  .section-heading {
    font-family: 'Code', sans-serif;
    font-size: 4.8rem;
    text-transform: uppercase;
    font-weight: 400;

    @media (max-width: 768px) {
      font-size: 2.8rem;
    }
  }
</style>
