---
import Icon from './Icon.astro'

export interface Props {
  type?: 'prev' | 'next'
  theme?: 'light' | 'dark'
  class?: string
}

const {
  class: className,
  theme = 'light',
  type = 'next',
  ...rest
} = Astro.props
---

<e-scroll-step-button
  {...rest}
  class="slider-button"
  data-type={type}
  data-theme={theme}
>
  <Icon
    class="slider-button__arrow"
    name="tail-arrow"
  />
</e-scroll-step-button>

<style is:global>
  .slider-button {
    width: 8.1rem;
    height: 3.4rem;

    display: inline-flex;
    align-items: center;
    justify-content: center;

    border-radius: 3.2rem;
    border: 0.1rem solid var(--color);

    transition: opacity var(--duration-button);

    &[data-theme='light'] {
      --color: var(--color-white-1);
    }

    &[data-theme='dark'] {
      --color: var(--color-grey-1);
    }

    &[data-type='prev'] {
      --step: -1;
      transform: scaleX(-1);
    }

    &[data-type='next'] {
      --step: 1;
    }

    &[disabled] {
      opacity: 0.6;
    }
  }

  .slider-button__arrow {
    width: 3.3rem;
    height: 1.8rem;

    fill: var(--color);
  }
</style>
