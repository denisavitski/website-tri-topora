---
import type { HTMLAttributes } from 'astro/types'

export interface Props extends HTMLAttributes<any> {
  class?: string
  src?: string
}

const {
  class: className,
  src = '/images/logos/tri-topora.png',
  ...rest
} = Astro.props
---

<a
  {...rest}
  class:list={['logo', className]}
  href="/"
  data-prefetch
>
  <img
    class="logo__image"
    src={src}
    alt="Логотип компании Три Топора"
    decoding="async"
  /></a
>

<style is:global>
  .logo {
    display: block;

    width: 9rem;
    height: 7rem;

    @media (max-width: 768px) {
      width: 4.6rem;
      height: 3.6rem;
    }
  }

  .logo__image {
    width: 100%;
    height: 100%;

    display: block;

    object-fit: contain;
  }
</style>
