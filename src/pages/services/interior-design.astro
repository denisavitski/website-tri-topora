---
import Breadcrumbs from '@blocks/Breadcrumbs.astro'
import Feedback from '@blocks/Feedback.astro'
import ServiceIntro from '@blocks/ServiceIntro.astro'
import Collaboration from '@blocks/Collaboration.astro'
import Layout from '@layout/Layout.astro'
import { getHref } from '@utils/url'
---

<Layout
  seo={{
    title: 'Три топора: Дизайн интерьера',
    description:
      'Строительство из дерева, стекла и камня сравнимо с исскуством',
    cover: getHref('/images/seo/home.jpg'),
  }}
>
  <Breadcrumbs
    links={[
      {
        name: 'Главная',
        href: '/',
      },
      {
        name: 'Сервисы',
        href: '/services',
      },
      {
        name: 'Дизайн интерьера',
        href: '/services/interior-design',
      },
    ]}
  />

  <ServiceIntro
    heading="Архитектурное проектирование"
    manager={{
      image: { src: '/images/team/demeneva-belyana/2.jpg' },
      name: 'Беляна Деменева',
      position: 'Арт Директор Три Топора',
    }}
    example={{
      src: '/images/services/interior-design/example.jpg',
    }}
    subtitle="Дизайн проект — это карта с помощью которой можно пройти квест под названием стройка дома под ключ максимально комфортно."
    description={[
      {
        description:
          'Дизайн интерьера в стройке дома это <b>фундамент</b> всех работ по отделке. Ошибочно воспринимать дизайн как набор красивых картинок',
      },
    ]}
  />

  <Collaboration />

  <Feedback />
</Layout>
