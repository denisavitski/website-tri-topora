      { src: '/images/team/pivneva-yuliya/portfolio/10.png' },
      { src: '/images/team/pivneva-yuliya/portfolio/11.png' },
      { src: '/images/team/pivneva-yuliya/portfolio/12.png' },
    ]}
  />

  <Feedback />
</Layout>
