---
import Breadcrumbs from '@blocks/Breadcrumbs.astro'
import Expert from '@blocks/Expert.astro'
import Feedback from '@blocks/Feedback.astro'
import ServiceIntro from '@blocks/ServiceIntro.astro'
import Layout from '@layout/Layout.astro'
import { getHref } from '@utils/url'
---

<Layout
  seo={{
    title: 'Три топора: Деревянная скульптура',
    description:
      'Строительство из дерева, стекла и камня сравнимо с исскуством',
    cover: getHref('/images/seo/home.jpg'),
  }}
>
  <Breadcrumbs
    links={[
      {
        name: 'Главная',
        href: '/',
      },
      {
        name: 'Сервисы',
        href: '/services',
      },
      {
        name: 'Деревянная скульптура',
        href: '/services/wood-sculpture',
      },
    ]}
  />

  <ServiceIntro
    heading="Деревянная скульптура"
    manager={{
      image: { src: '/images/team/demeneva-belyana/2.jpg' },
      name: 'Беляна Деменева',
      position: 'Арт Директор Три Топора',
    }}
    example={{
      src: '/images/services/wood-sculpture/example.jpg',
    }}
    subtitle="Три Топора строит уникальные дома, бани и загородные комплексы."
    description={[
      {
        description:
          'Изюминкой архитектуры и интерьера Вашего дома может быть деревянная скульптура, выполненная художником в максимально реалистично и только для Вас',
      },
    ]}
  />

  <Expert
    areas={false}
    logo={false}
  />

  <Feedback />
</Layout>
