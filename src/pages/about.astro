---
import Layout from '@layout/Layout.astro'
import { getHref } from '@utils/url'
import Approach from '@blocks/Approach.astro'
import Breadcrumbs from '@blocks/Breadcrumbs.astro'
import Team from '@blocks/Team.astro'
import LatestNews from '@blocks/LatestNews.astro'
import MassMedia from '@blocks/MassMedia.astro'
import Contacts from '@blocks/Contacts.astro'
import Explanation from '@blocks/Explanation.astro'
---

<Layout
  seo={{
    title: 'Три топора: О нас',
    description:
      'Строительство из дерева, стекла и камня сравнимо с исскуством',
    cover: getHref('/images/seo/home.jpg'),
  }}
>
  <Breadcrumbs
    links={[
      {
        name: 'Главная',
        href: '/',
      },
      {
        name: 'Три топора',
        href: '/about',
      },
    ]}
  />
  <Approach />
  <Explanation />
  <Team />
  <LatestNews />
  <MassMedia />
  <Contacts />
</Layout>
