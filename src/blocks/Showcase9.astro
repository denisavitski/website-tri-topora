---
import Image, { type ImageDataProps } from '@elements/Image.astro'
import TechnologyRichText from '@elements/TechnologyRichText.astro'
import Showcase, { type ShowcaseDirection } from '@elements/Showcase.astro'

export interface Props {
  direction?: ShowcaseDirection
  heading?: string
  text?: string
  images?: Array<ImageDataProps>
  plaque?: string
}

const {
  direction = 'ltr',
  heading = 'Сложные задачи в архитектуре ',
  text = `\
<h5>Timber Frame для сложных задач в&nbsp;стройке</h5>\
Выраженный уклон на участке?

Сложные условия подъезда спецтехники и подвоза строительных материалов?

Сейсмически активные зоны?

Грунт со слабой несущей способностью?
`,
  images = [
    { src: '/images/dev/1.jpg' },
    { src: '/images/dev/2.jpg' },
    { src: '/images/dev/3.jpg' },
  ],
  plaque = 'Эти задачи по плечу технологии Timber Frame',
} = Astro.props
---

<!-- BLOCK -->
<Showcase
  class="showcase-9"
  direction={direction}
  {heading}
>
  <e-scroll
    class="showcase-9__slider"
    slot={'col-1'}
  >
    {
      images.map((image) => {
        return (
          <Image
            {...image}
            lazy
            lazyBackground
            cover
            rounded
            class="showcase-9__slider__image"
          />
        )
      })
    }
  </e-scroll>

  <div
    class="showcase-9__right-images"
    slot={'col-2'}
  >
    {
      images.slice(1).map((image) => {
        return (
          <Image
            {...image}
            lazy
            lazyBackground
            cover
            rounded
            class="showcase-9__right-images__image"
          />
        )
      })
    }
  </div>

  <div
    class="showcase-9__rich-container"
    slot={'col-2'}
  >
    <TechnologyRichText
      text={text}
      class="showcase-9__rich"
    />

    <div
      class="showcase-9__plaque"
      set:html={plaque}
    />
  </div>
</Showcase>

<style is:global>
  .showcase-9 {
  }

  .showcase-9__slider {
    --hibernate: true;

    @media (min-width: 769px) {
      width: 52rem;
      min-height: 76rem;
    }

    @media (max-width: 768px) {
      --gap: 0.8rem;
      --axis: x;
      --auto-size: true;
      --hibernate: false;
      --sectional: true;

      height: 38.6rem;

      display: flex;
      gap: var(--gap);
    }
  }

  .showcase-9__slider__image {
    @media (min-width: 769px) {
      display: none;

      width: 100%;
      height: 100%;

      &:nth-child(1) {
        display: block;
      }
    }
  }

  .showcase-9__right-images {
    display: flex;
    gap: 2.4rem;

    margin-bottom: 2.4rem;

    @media (max-width: 768px) {
      display: none;
    }
  }

  .showcase-9__right-images__image {
    width: 52rem;
    min-height: 42rem;
  }

  .showcase-9__rich-container {
    position: relative;
  }

  .showcase-9__rich {
    width: 52rem;

    @media (max-width: 768px) {
      width: 100%;

      margin-bottom: 2.4rem;
    }
  }

  .showcase-9__plaque {
    font-size: 4rem;
    line-height: 120%;

    padding: 0.8rem 1.95rem;

    color: var(--color-grey-1);
    background-color: var(--color-white-1);
    border-radius: 0.8rem;

    @media (min-width: 769px) {
      position: absolute;
      bottom: 0;
      right: 0;

      width: 52rem;
    }

    @media (max-width: 768px) {
      font-size: 2rem;
      padding: 0.8rem;
    }
  }
</style>
