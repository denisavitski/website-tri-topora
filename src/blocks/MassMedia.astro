---
import SectionHeading from '@elements/SectionHeading.astro'
import SliderButtons from '@elements/SliderButtons.astro'
import MediaCard, {
  type Props as MediaCardProps,
} from '@elements/MediaCard.astro'
import CaptureOnce from '@elements/CaptureOnce.astro'

export interface Props {
  heading?: string
  cards?: Array<Omit<MediaCardProps, 'class'>>
}

const {
  heading = 'Три Топора в СМИ',
  cards = [
    {
      image: {
        src: '/images/dev/1.jpg',
      },
      href: 'https://google.com',
      title: 'Материал “Деловой квартал”',
      description:
        '«Дешевле не будет. В стройку нужно было заходить еще вчера»',
    },
    {
      image: {
        src: '/images/dev/2.jpg',
      },
      href: 'https://google.com',
      title: 'Материал “Деловой квартал”',
      description: 'Деревянные дома. Канадская рубка',
    },
    {
      image: {
        src: '/images/dev/3.jpg',
      },
      href: 'https://google.com',
      title: 'Материал “Деловой квартал”',
      description:
        '«Дешевле не будет. В стройку нужно было заходить еще вчера»',
    },
    {
      image: {
        src: '/images/dev/4.jpg',
      },
      href: 'https://google.com',
      title: 'Материал “Деловой квартал”',
      description:
        '«Дешевле не будет. В стройку нужно было заходить еще вчера»',
    },
    {
      image: {
        src: '/images/dev/5.jpg',
      },
      href: 'https://google.com',
      title: 'Материал “Деловой квартал”',
      description:
        '«Дешевле не будет. В стройку нужно было заходить еще вчера»',
    },
  ],
} = Astro.props
---

<!-- BLOCK -->
<section class="mass-media">
  <SectionHeading
    class="mass-media__heading"
    text={heading}
    revealOnScroll
  />

  <CaptureOnce class="mass-media__slider-wrapper">
    <e-scroll class="mass-media__slider">
      {
        cards.map((card, i) => {
          return (
            <div
              class="mass-media__slider__item"
              style={{ '--index': i }}
            >
              <MediaCard
                class="mass-media__slider__card"
                {...card}
              />
            </div>
          )
        })
      }
      <SliderButtons
        class="mass-media__slider__buttons"
        slot="static"
      />
    </e-scroll>
  </CaptureOnce>
</section>

<style is:global>
  .mass-media {
    position: relative;
    z-index: calc(var(--z-lines) + 1);

    overflow: hidden;

    padding: var(--section-vertical-padding) var(--screen-horisontal-padding);
  }

  .mass-media__heading {
    margin-bottom: 4rem;

    @media (max-width: 768px) {
      margin-bottom: 2.4rem;
    }
  }

  .mass-media__slider {
    --axis: x;
    --gap: 2.4rem;
    --classes: true;
    --sectional: true;
    --sections-in-view: 3;
    --auto-size: true;

    display: flex;
    gap: var(--gap);

    @media (max-width: 768px) {
      --gap: 0.8rem;
      --sections-in-view: 1.02;
      --overflow: unset;
    }
  }

  .mass-media__slider__buttons {
    position: absolute;
    right: 0;
    bottom: calc(100% + 5.2rem);
  }

  .mass-media__slider__item {
    width: 100%;

    @media (min-width: 769px) {
      &:nth-of-type(1),
      &:nth-of-type(2),
      &:nth-of-type(3),
      &:nth-of-type(4) {
        clip-path: polygon(0 0, 100% 0, 100% 0, 0 0);
        transition: clip-path 1.5s calc(0.1s * var(--index, 0));

        .mass-media__slider-wrapper.captured & {
          clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
        }
      }
    }
  }

  .mass-media__slider__card {
    width: 100%;
    height: 100%;
  }
</style>
